<div class="edit-block">		<div class="top-controls">			<select name="type">				{#PostTypes}					<option value="{Key}">{Key}</option>				{/PostTypes}			</select>			<div class="toolbar-placeholder"></div>		</div>		<div class="edit-area">			<div class="url-input-holder"></div>			<article class="editable"></article>			<div class="link-preview-actions" style="display:none">				<div class="choose-image">					<i class="icon-chevron-left iterate-left"></i>					<i class="icon-chevron-right iterate-right"></i>				</div>				<div class="show-thumb-holder">					<input type="checkbox" class="show-link-thumb">_('Show thumbnail');				</div>			</div>		</div>		<div class="image-edit-area"></div>		<div class="edit-post-message" style="float:left; margin-top:-10px; width:50%"></div>				<button ci="savepost" class="btn btn-primary pull-right" style="display:none;" type="submit">_('Save &amp; post');</button>		<button ci="save" class="btn pull-right" type="submit">_('Save');</button></div><div id="own-posts-holder" class="search-result-list-own scroller" style="margin-top:20px;">    <ul id="own-posts-results" class="post-list wraped">    </ul></div>