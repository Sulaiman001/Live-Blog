<article class="imagepost-interface">

	<input type="file" data-action="upload" />

	<div class="upload-image-container">
		<figure class="uploaded-image">
			[O]
		</figure>
	</div> 

	<div class="form-row">
		<div class="btn-group pull-left">
			<button class="btn" data-toggle="modal-image">_('Image Upload');</button>
		</div>
	</div>

	<div class="form-row">
		<textarea class="upload-caption" placeholder="_('Image Caption');"></textarea>
	</div>
	
</article>
